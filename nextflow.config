profiles {
    slurm {
        params {
            chunk_size = 100  // default sequences per JSON chunk
        }

        process {
            executor = 'slurm'
            queue = 'gpu'
            cpus = 8
            memory = '16 GB'
            time = '2d'
            maxRetries = 2

            // GPU allocation, one GPU per job, spread across nodes
            clusterOptions = '--gres=gpu:1 --exclusive --distribution=block:cyclic'

            // submit multiple tasks at once for parallel scheduling
            queueSize = 50
        }
    }
}

